<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="TimeDateCalculatorDll.OpenICS"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:TimeDateCalculatorDll;assembly=TimeDateCalculatorDll"
	>
	<ContentPage.Padding>
		<OnPlatform
			x:TypeArguments="Thickness"
			>
			<On
				Platform="iOS"
				Value="30"
				/>
			<On
				Platform="Android, UWP"
				Value="0, 0, 0, 30"
				/>
		</OnPlatform>
	</ContentPage.Padding>


	<ContentPage.Content>

		<StackLayout>
			<Image
				Source="{local:ImageResource TimeDateCalculatorDll.OpenIcs.png}"
				IsTabStop="False"
				IsEnabled="False"
				/>
			<Label
				Text="Correct for time zone"
				HorizontalOptions="Start"
				/>
			<Switch
				x:Name="SwitchTimeZone"
				IsToggled="false"
				HorizontalOptions="Start"
				/>
			<Button
				Text="Open"
				Clicked="Open_Button_Clicked"
				/>
		</StackLayout>

	</ContentPage.Content>
</ContentPage>